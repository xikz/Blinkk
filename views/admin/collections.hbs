    <label for="collectionName">Collection Name</label>
    <input type="text" id="collectionName" name="collectionName" , placeholder="Collection Name">

    <label for="collectionImage">image</label>
    <input type="text" id="collectionImage" name="collectionImage">

    <button type="submit">Add Collection</button>
</form>

