<div class="appearancePage">
   <div class="linksBg">


      <div class="linksPage">

         {{!-- <h2>MY LINKS</h2> --}}


         <div class="addinLinkTab">


            {{!-- <h2>Adding Link</h2> --}}

            <div class="linkForm">
               <form action="/admin/addlink" method="POST">

                  <label for="linkTitle"></label>
                  <input type="text" id="linkTitle" name="linkTitle" placeholder="Enter title">

                  <label for="linkUrl"></label>
                  <input type="text" id="linkUrl" name="linkUrl" placeholder="http://url">



                  {{!-- <label for="linkDescription">Description</label>
               <input type="text" id="linkDescription" name="linkDescription">

               <label for="contentFrom">From</label>
               <input type="patextssword" id="contentFrom" name="contentFrom">

                <label for="thumbnailUrl">image</label>
               <input type="text" id="thumbnailUrl" name="thumbnailUrl"> --}}

                  <button type="submit">Add Link</button>
               </form>
            </div>
         </div>



         <ul class="admin-links">
            {{#each user.links}}
            {{#if this.status}}
            <li id={{this._id}} class="admin-link" draggable="true">
               <div class="admin-link-name">{{this.linkTitle}}</div>
               <div class="admin-link-updates">
                  <a href="#">Update</a>
                  <a href="/admin/links/{{this._id}}/delete">Delete</a>
               </div>
            </li>
            {{/if}}
            {{/each}}
         </ul>

         {{!-- <div class="addCollectionButton">
         <h2>User collections</h2>
      </div> --}}



         <div class="user-collections">

            <a href="/admin/add-collection">
               <div id="add-new-collection" class="collection"> Add new collection </div>
            </a>

            {{#each user.groups}}
            <a href="/admin/open-collection/{{this._id}}">
               <div id="{{this._id}}" class="collection drop-zone">
                  {{this.groupName}}
               </div>
            </a>
            {{/each}}



         </div>
      </div>

   </div>

   <script src="/javascripts/script.js"></script>